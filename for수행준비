#include <stdio.h>

int main() {
 int num;
  scanf("%d",&num);

  if(num % 2 ==0)
  {
    for(int i = num-1; i >= 1;i--)
    {
     printf("%d-%d-%d=%d\n",i,i+1,i+2,i-(i+1)-(i+2)); 
    }
  }
  else
  {
    for(int i = num-1; i >= 1;i--)
    {
     printf("%d+%d+%d=%d\n",i,i+1,i+2,i+(i+1)+(i+2));
    }
  }
  return 0;  
}


#include <stdio.h>

int main() {
  int num;

  scanf("%d",&num);

  for(int i = 1;i <= num; i++)
    {
      printf("%d + %d + %d = %d\n",i,i+1,i+2,i+(i+1)+(i+2));
    }
  return 0;  
}


